<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount_SelectType">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/account_type_page1_background"
        android:layout_width="410dp"
        android:layout_height="680dp"
        android:layout_marginTop="81dp"
        android:background="@drawable/homepage_background"
        android:backgroundTint="@color/transparent_light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/enter_user_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:text="@string/enter_user"
        android:textColor="@color/dark_blue_buttons"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/enter_pass_1"
        android:layout_width="163dp"
        android:layout_height="24dp"
        android:layout_marginBottom="10dp"
        android:text="@string/enter_pass"
        android:textColor="@color/dark_blue_buttons"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/enter_create_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="@+id/account_type_page1_background"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/login_message"
        android:layout_width="281dp"
        android:layout_height="112dp"
        android:gravity="center|center_horizontal"
        android:text="@string/create_account"
        android:textAlignment="center"
        android:textColor="@color/dark_blue_buttons"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/enter_create_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />

    <EditText
        android:id="@+id/enter_create_username"
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:padding="10dp"
        android:layout_marginBottom="404dp"
        android:background="@drawable/rounded_corner"
        android:hint="  Ex: User123"
        app:layout_constraintBottom_toBottomOf="@+id/account_type_page1_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/enter_create_password"
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:padding="10dp"
        android:background="@drawable/rounded_corner"
        android:hint="  Ex: password1234"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/account_type_page1_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_create_username"
        app:layout_constraintVertical_bias="0.24"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/button_create_account_submit"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginBottom="124dp"
        android:backgroundTint="@color/light_blue_buttons"
        android:text="@string/next"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_med_meals"
        android:layout_width="232dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/medmeals_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_back_create_account_login"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="86dp"
        android:layout_height="55dp"
        android:backgroundTint="#FFFFFF"
        android:text="&lt; Back"
        android:textColor="@color/dark_blue_buttons"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
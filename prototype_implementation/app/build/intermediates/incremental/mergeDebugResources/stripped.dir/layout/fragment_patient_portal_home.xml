<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientPortal_Home">

    <!-- TODO: Update blank fragment layout -->


    <ImageButton
        android:id="@+id/image_account_settings_patportal_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/account_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_med_meals"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/patient_portal_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:gravity="center|center_horizontal"
        android:text="@string/pat_portal"
        android:textAlignment="center"
        android:textColor="@color/light_blue_buttons"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_patient_portal_icon"
        android:layout_width="84dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/patient_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_portal_heading" />

    <TextView
        android:id="@+id/meal_text"
        android:layout_width="332dp"
        android:layout_height="32dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="164dp"
        android:background="@drawable/custom_border_bottom"
        android:text="Meal Recommendations"
        android:textColor="@color/light_blue_buttons"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_patient_portal_icon"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/meals_text1"
        android:layout_width="130dp"
        android:layout_height="88dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@color/dark_blue_buttons"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/meals_image_1"
        app:layout_constraintTop_toBottomOf="@+id/image_patient_portal_icon" />

    <TextView
        android:id="@+id/meals_text2"
        android:layout_width="130dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@color/dark_blue_buttons"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/meals_image_2"
        app:layout_constraintTop_toBottomOf="@+id/meals_text1" />

    <TextView
        android:id="@+id/meals_text3"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="@color/dark_blue_buttons"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/meals_image_3"
        app:layout_constraintTop_toBottomOf="@+id/meals_text2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="69dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/custom_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/button_patient_home_meal_recs"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/dark_blue_meal_recs1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/button_patient_home_doc_notes"
            android:layout_width="73dp"
            android:layout_height="55dp"
            android:src="@drawable/dark_blue_meal_recs2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/button_patient_home_fta"
            android:layout_width="71dp"
            android:layout_height="55dp"
            android:layout_marginStart="44dp"
            android:src="@drawable/doc_notes_fta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_patient_home_doc_notes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/image_med_meals"
        android:layout_width="232dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/medmeals_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/meals_image_1"
        android:layout_width="172dp"
        android:layout_height="90dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/meals_text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_text"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/meals_image_2"
        android:layout_width="172dp"
        android:layout_height="90dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="42dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/meals_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meals_image_1"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/meals_image_3"
        android:layout_width="172dp"
        android:layout_height="90dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/meals_text3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meals_image_2"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/no_notes_1"
        android:layout_width="249dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="You don't have any meal recommendations yet."
        android:textColor="@color/dark_blue_buttons"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />


</androidx.constraintlayout.widget.ConstraintLayout>
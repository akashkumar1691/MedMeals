<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorPortal_Home">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/doc_portal_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal"
        android:text="@string/doc_portal"
        android:textAlignment="center"
        android:textColor="@color/light_blue_buttons"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <Button
        android:id="@+id/doc_button_submit"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginBottom="208dp"
        android:backgroundTint="@color/dark_blue_buttons"
        android:text="@string/login_submit"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/enter_p_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_p_user"
        android:textColor="@color/light_blue_buttons"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.474"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/p_username"
        android:layout_width="301dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/bold_text_box_border"
        android:hint="     Ex: User123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_p_user"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/image_doctor_portal_icon"
        android:layout_width="88dp"
        android:layout_height="84dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/doctor_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_portal_heading" />

    <ImageButton
        android:id="@+id/image_account_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:background="#0000"
        android:scaleType="fitCenter"
        android:src="@drawable/account_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_med_meals"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_med_meals"
        android:layout_width="232dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/medmeals_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_marginBottom="20dp"
        android:text="OR"
        android:textColor="@color/light_blue_buttons"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_all_patients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/view_all_patients"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="@color/dark_blue_buttons"
        android:text="View Existing Patients"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>